// go to couch_east
robot.goTo("table_southwest");   // other places: door,  home, trash, couch_west, vivek_desk,
							// table_northwest, table_northeast, table_southwest, table_southeast

// display message
robot.displayMessage('Hello!', 'My Name is Evil.');

// say message
robot.say("Hello, my name is Evil.");

// wait for two seconds
waitForDuration(2);

// say message
robot.say("What's your favorite killing target?");

// Ask a question
item = robot.askMultipleChoice('What\'s your favorite killing target?', ['zombies', 'psychos']);

// Display a message by adding two strings together
robot.displayMessage(String('You Selected ') + String(item));

// say message
robot.say(String('You Selected ') + String(item));

// wait for one second
waitForDuration(2);

// Display a message
robot.displayMessage("killing time!");

// say message
robot.say("Killing time!");

// Go back to home
robot.goTo("door");









